#!/bin/bash
echo "Removing old dist"
rm -rf opencola
mkdir opencola

echo "Running gradle installDist"
cd ../opencola-server/server
../gradlew installDist

echo "Copying distribution"
cd ../../install/opencola
mkdir server
cp -r ../../opencola-server/server/build/install/opencola-server/* server

# This is probably not needed anymore, since the extension is bundled into the application as a resource
echo "Copying Chrome extension"
cp -r  ../../extension/chrome .

echo "Done."




